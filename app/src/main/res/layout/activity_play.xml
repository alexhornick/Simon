<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_play"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.alexhornick.simon.PlayActivity"
    android:background="@android:color/background_dark">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="140dp"
        app:srcCompat="@drawable/green"
        android:id="@+id/simon3"
        android:layout_alignTop="@+id/simon4"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/blue"
        android:id="@+id/simon1"
        android:layout_alignTop="@+id/simon2"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="140dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/red"
        android:id="@+id/simon2"
        android:layout_marginBottom="44dp"
        android:layout_above="@+id/simon3"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        app:srcCompat="@drawable/yellow"
        android:id="@+id/simon4"
        android:layout_marginBottom="63dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/simon4"
        android:layout_centerHorizontal="true"
        android:id="@+id/start_button" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:id="@+id/score"
        android:textColor="#ffffff" />
</RelativeLayout>
